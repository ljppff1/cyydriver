<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mRlSpendLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/d_orange" >

    <ImageView
        android:id="@+id/mIvSpendIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/open_animation_icon"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/mTvSpendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cyy_server_app"
        android:textColor="@android:color/white"
        android:textSize="18sp" 
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mIvSpendIcon"
        android:layout_marginTop="8dp"
        android:visibility="invisible"/>

</RelativeLayout>